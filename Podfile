# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'Apumanque' do
  use_frameworks!
  
  # Essentials helpers
  pod 'SwiftyEssentials'
  # HTTP networking library ( https://github.com/Alamofire/Alamofire )
  pod 'Alamofire'
  # JSON lib ( https://github.com/SwiftyJSON/SwiftyJSON )
  pod 'SwiftyJSON'
  # HTML parser ( https://github.com/scinfu/SwiftSoup )
  pod 'SwiftSoup'
  # Validator ( https://cocoapods.org/pods/Validator )
  pod 'Validator'
  # Web image loader ( https://github.com/rs/SDWebImage )
  pod 'SDWebImage'
  # Circular Progress
  pod 'UICircularProgressRing'
  # Left align layout for collection view ( https://github.com/mokagio/UICollectionViewLeftAlignedLayout )
  pod 'UICollectionViewLeftAlignedLayout'
  # Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Messagingâ€™
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
end
